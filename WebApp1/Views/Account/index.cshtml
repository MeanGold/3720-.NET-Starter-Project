@{
    string userName = "Jonathan";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        /* Header Bar Styling */
        header {
            background-color: #F56600;
            color: white;
            padding: 35px;
            text-align: center;
        }
        .title-div {
            display:inline;
            background-image: url("~/images/IMG_5589.jpg");
        }
        h1 {
            background-image: url("~/images/IMG_5589.jpg");
            border: 10px, solid, #522d80;
            border-radius: 20px;
            display: inline;
            padding: 15px;
        }
        nav {
            display: flex;
            justify-content: center;
            background-color: #522d80;
        }
        nav a {
            color: white;
            padding: 14px 20px;
            text-decoration: none;
            text-align: center;
        }
        nav a:hover {
            background-color: #555;
        }
        /* Main Content Styling */
        .content {
            padding: 20px;
        }
        .bg-image {
            height: 200px;
            border-radius: 50px;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <div class="title-div">
            <h1>TigerTix</h1>
        </div>
    </header>

    <!-- Navigation Links -->
    <nav>
        <a href="#profile">Profile</a>
        <a href="#settings">Settings</a>
        <a href="#tickets">Tickets</a>
        <a href="/app">Logout</a>
    </nav>

    <!-- Main Content Section -->
    <div class="content">
        <h2>Hi, @userName!</h2>
        <h3>Welcome to your account page!</h3>
        <p>Select an option from the navigation menu above to manage your account.</p>
    </div>

    @* <div class="content">
        <img src="~/images/IMG_5589.jpg" class="bg-image"/>
    </div> *@

</body>
</html>